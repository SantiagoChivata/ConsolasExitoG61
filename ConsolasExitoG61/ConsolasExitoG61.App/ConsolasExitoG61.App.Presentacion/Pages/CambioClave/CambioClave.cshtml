@page
@model ConsolasExitoG61.App.Presentacion.Pages.CambioClaveModel
@{
}
<form method="post">

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Ingrese una clave nueva</label>
                <input asp-for="Password" type = "password" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Confirme la clave nueva</label>
                <input asp-for="RepeatPassword" type = "password" class="form-control" />
                <span class="text-danger">@Model.MensajeClave</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar Clave" class="btn btn-primary" />
            </div>
</form>
</div>
</div>