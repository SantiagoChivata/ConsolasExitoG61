@page
@model ConsolasExitoG61.App.Presentacion.Pages.LoginModel
@{
}
<form method="post">

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <input asp-for="Usuario" class="form-control" />
                <span class="text-danger">@Model.MensajeUsuario</span>
            </div>
            <div class="form-group">
                <label class="control-label">Clave</label>
                <input asp-for="Clave" type = "password" class="form-control" />
                <span class="text-danger">@Model.MensajeClave</span>

            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
</form>
</div>
</div>
