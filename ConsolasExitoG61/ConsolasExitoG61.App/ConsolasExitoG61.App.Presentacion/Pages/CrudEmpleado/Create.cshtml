@page
@model ConsolasExitoG61.App.Presentacion.Pages.CrudEmpleado.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleado.CodEmpleado" class="control-label"></label>
                <input asp-for="Empleado.CodEmpleado" class="form-control" />
                <span asp-validation-for="Empleado.CodEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Cargo" class="control-label"></label>
                <select asp-for="Empleado.Cargo" class="form-control">
                    <option value="0">ADMIISTRADOR_COMPRAS</option>
                    <option value="1">ADMINISTRADOR_VENTAS</option>
                    <option value="2">ADMINISTRADOR_SISTEMA</option>
                    <option value="3">VENDEDOR</option>
                    <option value="4">CLIENTE</option>
                </select>
                <span asp-validation-for="Empleado.Cargo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Empleado.accesoReportes" /> @Html.DisplayNameFor(model => model.Empleado.accesoReportes)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Nombres" class="control-label"></label>
                <input asp-for="Empleado.Nombres" class="form-control" />
                <span asp-validation-for="Empleado.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Apellidos" class="control-label"></label>
                <input asp-for="Empleado.Apellidos" class="form-control" />
                <span asp-validation-for="Empleado.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Edad" class="control-label"></label>
                <input asp-for="Empleado.Edad" class="form-control" />
                <span asp-validation-for="Empleado.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Cedula" class="control-label"></label>
                <input asp-for="Empleado.Cedula" class="form-control" />
                <span asp-validation-for="Empleado.Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Direccion" class="control-label"></label>
                <input asp-for="Empleado.Direccion" class="form-control" />
                <span asp-validation-for="Empleado.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Usuario" class="control-label"></label>
                <input asp-for="Empleado.Usuario" class="form-control" />
                <span asp-validation-for="Empleado.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Clave" class="control-label"></label>
                <input asp-for="Empleado.Clave" class="form-control" />
                <span asp-validation-for="Empleado.Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Email" class="control-label"></label>
                <input asp-for="Empleado.Email" class="form-control" />
                <span asp-validation-for="Empleado.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Sucursal" class="control-label"></label>
                <select asp-for="Empleado.Sucursal" class="form-control" asp-items="Model.SucursalesFront"> </select>
                <span asp-validation-for="Empleado.Sucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
